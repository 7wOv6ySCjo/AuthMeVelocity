<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fr.xephi</groupId>
    <artifactId>authmebungee-parent</artifactId>
    <version>1.6.2-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>AuthMeBungee</name>
    <description>Bungeecord addon for AuthMe!</description>
    <inceptionYear>2014</inceptionYear>

    <organization>
        <name>AuthMe-Team</name>
        <url>https://github.com/AuthMe-Team</url>
    </organization>

    <scm>
        <connection>scm:git:https://github.com/AuthMe-Team/AuthMeBungee.git</connection>
        <developerConnection>scm:git:git@github.com:Xephi/AuthMe-Team/AuthMeBungee.git</developerConnection>
        <url>https://github.com/AuthMe-Team/AuthMeBungee.git</url>
    </scm>

    <ciManagement>
        <system>jenkins</system>
        <url>http://ci.xephi.fr/job/AuthMeBungee/</url>
    </ciManagement>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/CryLegend/AuthMeBungee/issues</url>
    </issueManagement>

    <licenses>
        <license>
            <name>The GNU General Public Licence version 3 (GPLv3)</name>
            <url>http://www.gnu.org/licenses/gpl-3.0.html</url>
        </license>
    </licenses>

    <properties>
        <!-- Project Properties -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <bukkitVersion>1.11-R0.1-SNAPSHOT</bukkitVersion>
        <bungeeVersion>1.11-SNAPSHOT</bungeeVersion>
    </properties>

    <modules>
        <module>authmebungee-bungeecord</module>
        <module>authmebungee-bukkit</module>
    </modules>

    <build>
        <plugins>
            <!-- Maven Java Compiler -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <!-- Libs Shading and Relocation -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                </configuration>
                <executions>
                    <execution>
                        <id>shade</id>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
